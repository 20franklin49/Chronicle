<body>
	<div>
		<form id="addCategoryForm" role="form" method="get" action="/addcategory">
			<h1>Add Category</h1>
			<div> 
				<br>Category name:<br>
				<input class="form-control" type="text" name="name"><br>
			</div>

			<div>
				<select name="color">
					<option value="red">Red</option>
					<option value="orange">Orange</option>
					<option value="yellow">Yellow</option>
					<option value="green">Green</option>
					<option value="blue">Blue</option>
					<option value="purple">Purple</option>
					<option value="grey">Grey</option>
				</select>
			</div>

			<div class="save">
				<button class="btn btn-primary" type="submit">Add</button>
			</div>
		</form>



		<form id="changeColorForm" role="form" method="get" action="/changecolor">
			<h1>Change Color</h1>
			<div> 
				<br>Category:<br>
				<select name="category">
					{{#each categories}}
					<option value="{{name}}">{{name}}</option>
					{{/each}}
				</select>
			</div>

			<div>
				<br>Color:<br>
				<select name="color">
					<option value="red">Red</option>
					<option value="orange">Orange</option>
					<option value="yellow">Yellow</option>
					<option value="green">Green</option>
					<option value="blue">Blue</option>
					<option value="purple">Purple</option>
					<option value="grey">Grey</option>
				</select>
			</div>

			<div class="save">
				<button class="btn btn-primary" type="submit">Change</button>
			</div>
		</form>





		<form id="delCategoryForm" role="form" method="get" action="/delcategory">
			<h1>Delete Category</h1>

			<div>
				<select name="category">
					{{#each categories}}
					<option value="{{name}}">{{name}}</option>
					{{/each}}
				</select>
			</div>

			<div class="delete">
				<button class="btn btn-primary" type="submit">Delete</button>
			</div>
		</form>


		

		<a href="/signout">
		<button style="margin: 15px 0px" class="btn btn-lg btn-primary btn-block" type="submit">Logout</button>
		</a>

	<!--	<a href="/login">Logout</a>-->
	</div>

	<div class="navbad bootstrap-override">
